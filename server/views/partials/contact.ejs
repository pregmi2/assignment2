<% if (title === "Contact Me"){%>  
    <main class="container paddingAll ">
        <div class="jumbotron card " style="width: auto;"> 
          <div class="card-header bg-info text-white" >
            <h5 class="card-title">Contact Me</h5>
          </div>
          <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
          <!-- Description-->
          <p class="text-center w-responsive mx-auto mb-5">Do you have any questions? Please contact us directly.</p>
          <div class="col-md-12 mb-md-1 mb-5">
              <!--Form creation -->
              <form id="contact-form" name="contact-form" action="app.js" method="validateForm">
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-1">
                            <label for="name" class="">Your name</label>
                            <input type="text" id="name" name="name" class="form-control">                            
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="md-form mb-1">
                            <label for="email" class="">Your email</label>
                            <input type="text" id="email" name="email" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-1">
                            <label for="subject" class="">Subject</label>
                            <input type="text" id="subject" name="subject" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-3">
                            <label for="message">Message</label>
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea> 
                        </div>
                    </div>
                </div>
            </form>

            <div class="text-center text-md-left mb-3">
                <a class="btn btn-primary" onclick="document.getElementById('contact-form').validateForm()" type="submit">Submit</a>
            </div>
            <div class="status"></div>
            </div>
        </div>
    </main>
<%}%>