<%- include ../partials/header.ejs %>
<%- include ../partials/top_nav.ejs %>

<div class="container">
    <div clas="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Business Name:</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Business Name" name="name" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Business Phone Number:</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Business Phone Number" name="number" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Business Email Address:</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Business Email Address" name="email" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit</button>
                    <a herf="/businesscontacts" class="btn btn-warning"> 
                        <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>


